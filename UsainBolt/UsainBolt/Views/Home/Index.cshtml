@model UsainBolt.Models.Athlete

@{
    ViewData["Title"] = Model.Name + " Fan Page";
}

<style>
    body {
        margin: 0;
        font-family: 'Arial Black', Gadget, sans-serif;
        background: #f0f0f0;
        color: #333;
    }

    .page {
        max-width: 1000px;
        margin: 30px auto;
        background: linear-gradient(120deg, #f9c846, #f39c12);
        border-radius: 25px;
        padding: 40px 30px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    }

    h1 {
        font-size: 3.5rem;
        text-align: center;
        color: #2c3e50;
        margin-bottom: 10px;
    }

    .sport {
        font-size: 1.5rem;
        color: #1b2631;
        text-align: center;
        font-style: italic;
        margin-bottom: 25px;
    }

    .bio {
        font-size: 1.2rem;
        max-width: 750px;
        margin: 0 auto 40px auto;
        text-align: center;
        line-height: 1.6;
        color: #2c3e50;
        font-weight: 600;
    }

    .gallery {
        display: flex;
        justify-content: center;
        gap: 25px;
        flex-wrap: wrap;
    }

    .gallery img {
        width: 230px;
        height: 150px;
        object-fit: cover;
        border-radius: 18px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        cursor: pointer;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
        border: 3px solid #e67e22;
    }

    .gallery img:hover {
        transform: scale(1.12);
        box-shadow: 0 10px 30px rgba(0,0,0,0.35);
        border-color: #d35400;
    }
</style>

<div class="page">
    <h1>@Model.Name</h1>
    <div class="sport">@Model.Sport</div>
    <p class="bio">@Model.Bio</p>

    <div class="gallery">
        @foreach (var photo in Model.Photos)
        {
            <img src="@photo" alt="Photo of @Model.Name" onclick="window.open('@photo', '_blank')" />
        }
    </div>
</div>
